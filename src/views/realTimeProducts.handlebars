<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <ul id="product-list">
      {{#each products}}
        <li>
          {{this.title}} - {{this.price}} 
          <button class="delete-product-button" data-product-id="{{this._id}}">Eliminar</button>
        </li>
        
      {{/each}}
    </ul>
    
    <form id="add-product-form">
      <label for="product-title">Product name:</label>
      <input type="text" id="product-title" name="product-title">
      
      <label for="product-price">Product price:</label>
      <input type="number" id="product-price" name="product-price">
      <br>
      <label for="product-description">Product description:</label>
      <input type="text" id="product-description" name="product-description">
      
      <label for="product-stock">Product stock:</label>
      <input type="number" id="product-stock" name="product-stock">
      <br>
      <label for="product-code">Product code:</label>
      <input type="number" id="product-code" name="product-code">
      <label for="product-category">Product category:</label>
      <input type="text" id="product-category" name="product-category">

      
      <button type="submit">Add product</button>
    </form>

    <script src="socket.io/socket.io.js"></script>
    <script src="/js/realTimeProducts.js"></script>
</body>
</body>
</html>